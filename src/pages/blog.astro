---
import "../styles/global.css";
import DiaYHora from "../components/DiaYHora.jsx";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
const pageTitle = "Mi Blog";
---

<head>
  <meta charset="utf-8" />
  <title>{pageTitle}</title>
  <meta name="description" content="Temario completo del curso Astro" />

  <style>
    main {
      margin: 24px;
      margin-top: 32px;
    }
    p {
      font-family: Arial, sans-serif;
      font-size: 18px;
    }
    h1 {
      font-size: 24px;
      margin-bottom: 16px;
    }

    ol {
      margin-left: 20px;
    }

    li {
      margin-bottom: 6px;
      font-family: Arial, sans-serif;
      font-size: 18px;
    }

    ol ol {
      list-style-type: lower-alpha;
      margin-top: 8px;
      margin-left: 20px;
    }
    a {
      text-decoration: none;
      color: blue;
    }
    a:hover {
      font-weight: bold;
    }

    div {
      background-color: grey;
      padding: 15px;
      border-radius: 20px;
      text-align: center;
      color: rgb(33, 32, 32);
    }
  </style>
</head>

<div>
  <DiaYHora client:load />
  <Navigation />
</div>
<main>
  <h1>{pageTitle}</h1>
  <p>Aquí es donde publicaré acerca de mi viaje aprendiendo Astro:</p>
  <ul>
    <li><a href="/posts/post-1/">Publicación 1</a></li>
    <li><a href="/posts/post-2/">Publicación 2</a></li>
    <li><a href="/posts/post-3/">Publicación 3</a></li>
  </ul>
</main>

<Footer />
