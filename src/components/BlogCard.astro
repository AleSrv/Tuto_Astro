---
interface Props {
  title: string;
  description: string;
  pubDate: string;
  author: string;
  url: string;
  image: {
    url: string;
    alt: string;
  };
  tags: string[];
}

const { title, description, pubDate, author, url, image, tags } =
  Astro.props as Props;
---

<article>
  <a href={url} style="text-decoration: none; color: inherit;">
    <img
      src={image.url}
      alt={image.alt}
      style="width: 100%; border-radius: 8px; object-fit: cover;"
    />
    <h2 style="margin-top: 0.5rem;">{title}</h2>
    <p style="color: #555;">{description}</p>
  </a>
  <small class="blog-small">📅 {pubDate.slice(0, 10)} · ✍ {author}</small>
  <div style="margin-top: 0.5rem;">
    {
      tags.map((tag) => ( 
        <a
          href={`/tags/${tag.toLowerCase()}`}
          style="margin-right: 0.4rem; font-size: 0.85rem; color: #0ea5e9;"
        >
          <span>#️⃣{tag}</span>
        </a>
      ))
    }
  </div>
</article>
