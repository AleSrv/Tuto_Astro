---
// components/MainFrontmatter.astro
const { frontmatter } = Astro.props;
---
<article>
  <h1>{frontmatter.title}</h1>
  <p>Publicado el: {frontmatter.pubDate.toString().slice(0, 10)}</p>
  <p>Mi estado: <em>{frontmatter.description}</em></p>
  <p>Autor: {frontmatter.author}</p>
  <slot />
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
  <p>Tags:</p>
  {frontmatter.tags.map((tag: string) => <span># {tag} </span>)}
</article>
