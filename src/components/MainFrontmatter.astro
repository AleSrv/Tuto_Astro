---
const { frontmatter } = Astro.props;
import TagList from "./TagList.astro";
---

<>
  <h1>{frontmatter.title}</h1>
  <p>📅 Publicado el: {frontmatter.pubDate.toString().slice(0, 10)}</p>
  <p>📝 Mi estado: <em>{frontmatter.description}</em></p>
  <p>✍ Autor: {frontmatter.author}</p>

  <slot />

  <img class="img-post" src={frontmatter.image.url} alt={frontmatter.image.alt} />

  {
    Array.isArray(frontmatter.tags) && frontmatter.tags.length > 0 ? (
      <div>
        <p>🏷️ Tags:</p>
        <TagList tags={frontmatter.tags} />
      </div>
    ) : (
      <div>
        <p>🏷️ Tags:</p>
        <p>No hay Tags para el elemento seleccionado</p>
      </div>
    )
  }
</>
